<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Platform.AppCompat" parent="@style/Platform.V14.AppCompat" />
    <style name="Platform.AppCompat.Light" parent="@style/Platform.V14.AppCompat.Light" />
    <style name="Base.TextAppearance.AppCompat.Button" parent="@style/Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/abc_text_size_button_material</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="reg_forgot_password">
        <item name="android:textSize">@dimen/btn_reg_text_size</item>
        <item name="android:textColor">@drawable/reg_btn_secondary_text_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="reg_style_btn">
        <item name="android:textSize">@dimen/btn_reg_text_size</item>
        <item name="android:textColor">@drawable/reg_btn_text_selector</item>
        <item name="android:background">@drawable/reg_btn_selector</item>
        <item name="android:paddingLeft">@dimen/reg_btn_padding_left</item>
        <item name="android:paddingTop">@dimen/reg_btn_padding_top</item>
        <item name="android:paddingRight">@dimen/reg_btn_padding_left</item>
        <item name="android:paddingBottom">@dimen/reg_btn_padding_top</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0.0dip</item>
        <item name="android:minHeight">@dimen/reg_btn_height</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Platform.V14.AppCompat" parent="@style/Platform.V11.AppCompat">
        <item name="android:actionModeSelectAllDrawable">?actionModeSelectAllDrawable</item>
        <item name="android:listPreferredItemPaddingLeft">@dimen/abc_list_item_padding_horizontal_material</item>
        <item name="android:listPreferredItemPaddingRight">@dimen/abc_list_item_padding_horizontal_material</item>
    </style>
    <style name="Platform.V14.AppCompat.Light" parent="@style/Platform.V11.AppCompat.Light">
        <item name="android:actionModeSelectAllDrawable">?actionModeSelectAllDrawable</item>
        <item name="android:listPreferredItemPaddingLeft">@dimen/abc_list_item_padding_horizontal_material</item>
        <item name="android:listPreferredItemPaddingRight">@dimen/abc_list_item_padding_horizontal_material</item>
    </style>
</resources>
