<?xml version="1.0" encoding="utf-8"?>
<GridLayout android:padding="8.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent" android:columnCount="2" android:columnOrderPreserved="false" android:useDefaultMargins="true" android:alignmentMode="alignBounds"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:layout_gravity="right" android:layout_column="0" android:text="Email:" />
    <EditText android:layout_gravity="left" android:id="@id/trad_reg_email" android:ems="10" android:inputType="textEmailAddress" android:imeOptions="actionNext" />
    <TextView android:layout_gravity="right" android:layout_column="0" android:text="EmailOrMobile:" />
    <EditText android:layout_gravity="left" android:id="@id/trad_reg_email_or_mobile" android:ems="10" android:inputType="text" android:imeOptions="actionNext" />
    <TextView android:layout_gravity="right" android:layout_column="0" android:text="Birthday:" />
    <EditText android:layout_gravity="left" android:id="@id/trad_reg_birthday" android:ems="10" android:inputType="text" android:imeOptions="actionNext" />
    <TextView android:layout_gravity="right" android:layout_column="0" android:text="Display Name:" />
    <EditText android:layout_gravity="left" android:id="@id/trad_reg_display_name" android:ems="10" android:inputType="textPersonName" android:imeOptions="actionNext" />
    <TextView android:layout_gravity="right" android:layout_column="0" android:text="First Name:" />
    <EditText android:layout_gravity="left" android:id="@id/trad_reg_first_name" android:ems="10" android:inputType="textPersonName" android:imeOptions="actionNext" />
    <TextView android:layout_gravity="right" android:layout_column="0" android:text="Last Name:" />
    <EditText android:layout_gravity="left" android:id="@id/trad_reg_last_name" android:ems="10" android:inputType="textPersonName" android:imeOptions="actionNext" />
    <TextView android:layout_gravity="right" android:layout_column="0" android:text="Password:" />
    <EditText android:layout_gravity="left" android:id="@id/trad_reg_password" android:ems="10" android:inputType="textVisiblePassword" android:imeOptions="actionNext" />
    <TextView android:layout_gravity="right" android:layout_column="0" android:text="Confirm:" />
    <EditText android:layout_gravity="left" android:id="@id/trad_reg_password_confirm" android:ems="10" android:inputType="textVisiblePassword" android:imeOptions="actionNext" />
    <Space android:layout_gravity="fill" android:layout_column="0" android:layout_columnSpan="2" />
    <Button android:layout_gravity="center_horizontal" android:id="@id/trad_reg_button" android:layout_column="0" android:text="Register" android:onClick="register" android:layout_columnSpan="2" />
</GridLayout>