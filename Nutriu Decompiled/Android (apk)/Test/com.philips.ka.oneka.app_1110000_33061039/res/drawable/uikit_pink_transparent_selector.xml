<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:drawable="@drawable/uikit_button_transparent_disabled" />
    <item android:state_pressed="true">
        <shape android:shape="rectangle"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="@dimen/uikit_button_stroke_width" android:color="@color/uikit_philips_light_pink" />
            <corners android:radius="@dimen/uikit_button_corner_rounding" />
            <solid android:color="#1ae9c5cb" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="@dimen/uikit_button_stroke_width" android:color="@color/uikit_philips_very_light_pink" />
            <corners android:radius="@dimen/uikit_button_corner_rounding" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>